<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for questions text -->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <!-- Style for answer text -->
    <style name="AnswerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Style for buttons -->
    <style name="ButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Style for radio groups -->
    <style name="RadioGroupStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!-- Style for checkbox -->
    <style name="CheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <!-- Style for image -->
    <style name="ImageStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">30dp</item>
    </style>

    <!-- Style for page title -->
    <style name="PageTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Style for edit text -->
    <style name="EditTextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

</resources>